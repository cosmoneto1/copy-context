{
  "name": "my-copy-context",
  "displayName": "my copy context",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateCodeMarkdown",
        "title": "Gerar Markdown Compacto para IA"
      },
      {
        "command": "extension.openCodeDocs",
        "title": "Listar Vers√µes de Contexto (Markdown)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.generateCodeMarkdown",
          "group": "navigation",
          "when": "resourceExtname == .ts || resourceExtname == .tsx || resourceExtname == .js || resourceExtname == .jsx"
        }
      ],
      "editor/context": [
        {
          "command": "extension.generateCodeMarkdown",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "extension.openCodeDocs",
          "when": "view == explorer",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.generateCodeMarkdown",
        "key": "ctrl+shift+alt+m",
        "mac": "cmd+shift+alt+m",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.openCodeDocs",
        "key": "ctrl+shift+alt+l",
        "mac": "cmd+shift+alt+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
